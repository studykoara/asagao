<%= render "shared/login_form" unless current_member%>

<h2>最新ニュース</h2>
<ul>
  <% 5.times do |i| %>
    <li><%= link_to "ニュースの見出し", "#" %></li>
  <% end %>
</ul>

<h2>会員のブログ</h2>
<%
  entries = Entry.readable_for(current_member)
    .order(posted_at: :desc).limit(5)
%>
<ul>
  <% entries.each do |entry| %>
    <li>
      <%= link_to entry.title, entry %>
      by <%= link_to entry.author.name, [entry.author, :entries] %>
    </li>
  <% end %>
</ul>
