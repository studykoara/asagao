<% @page_title = "投票した記事" %>
<h1><%= @page_title %></h1>

<% if @entries.present? %>
  <ul>
    <% @entries.each do |entry| %>
    <li>
      <%= link_to entry.title, entry %>
      by <%= link_to entry.author.name, [entry.author, :entries] %>
      <% if params[:entry_id].present? %>
        <% if params[:entry_id].to_i == current_member.id.to_i %>
          - <%= link_to "削除", [:unlike, entry], method: :patch,
                data: { confirm: "削除しますか?" } %>
        <% end %>
      <% else %>
        - <%= link_to "削除", [:unlike, entry], method: :patch,
              data: { confirm: "削除しますか?" } %>
      <% end %>
    </li>
    <% end %>
  </ul>
  <%= paginate @entries %>
<% else %>
  <p>記事がありません。</p>
<% end %>
